<div id="container">
  <div id="background"></div>
  <main>
    <section id="hero">
      <div class="logo">
        <h2>Proerbio</h2>
      </div>
      <h1>Coming Soon</h1>
      <p class="description">
        Una nuova casa di produzione e un hub innovativo per tutti i cinefili sta per arrivare. Restate sintonizzati per
        aggiornamenti.
      </p>
      <section id="links">
        <a href="mailto:valerio@proerbio.com" class="button">Contattaci</a>
      </section>
    </section>
  </main>

  <div id="footer">
    <p>&copy; 2025 Proerbio. Tutti i diritti riservati.</p>
  </div>
</div>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: linear-gradient(45deg, #3245ff 0%, #bc52ee 100%);
    filter: blur(100px);
    opacity: 0.5;
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 32px;
    text-align: center;
    max-width: 800px;
  }

  .logo {
    margin-bottom: 1rem;
  }

  .logo h2 {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    color: #111827;
    margin: 0;
  }

  h1 {
    font-size: 4rem;
    margin: 0.5em 0;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  #links {
    display: flex;
    gap: 16px;
    margin-top: 1rem;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 12px 24px;
    text-decoration: none;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-size: 1rem;
  }

  #links a.button:hover {
    transform: translateY(-2px);
    box-shadow:
      0 7px 14px rgba(0, 0, 0, 0.1),
      0 3px 6px rgba(0, 0, 0, 0.1);
  }

  #footer {
    text-align: center;
    padding: 2rem 1rem;
    color: #666;
    font-size: 0.875rem;
  }

  @media screen and (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .logo h2 {
      font-size: 1.8rem;
    }

    .description {
      font-size: 1rem;
    }
  }

  @media screen and (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    #hero {
      padding: 24px 16px;
    }
  }
</style>
